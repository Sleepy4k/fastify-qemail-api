# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=qemail_db
DB_CONNECTION_LIMIT=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=qemail:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-key-change-in-production

# Cloudflare Configuration
CF_API_TOKEN=your_cloudflare_api_token
CF_ACCOUNT_ID=your_account_id
CF_WEBHOOK_SECRET=webhook-secret-for-verification
CF_WORKER_NAME=qemail-worker

# Email Configuration
DEFAULT_EMAIL_EXPIRY_HOURS=24
MAX_EMAILS_PER_IP_PER_HOUR=10
ALLOWED_CUSTOM_USERNAME_PATTERN=^[a-zA-Z0-9._-]{3,30}$

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Admin Configuration
ADMIN_JWT_SECRET=admin-super-secret-jwt-key
ADMIN_JWT_EXPIRES_IN=1d

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
BCRYPT_ROUNDS=12
WEBHOOK_TOKEN_HEADER=X-Webhook-Token

# Feature Flags
REGISTRATION_ENABLED=true
REQUIRE_CAPTCHA=false
ENABLE_SWAGGER=true

# File Uploads
UPLOAD_DIR=./uploads
UPLOAD_BASE_URL=https://api.qemail.web.id
